# Backend configuration - EXAMPLE FILE
# Copy this to .env and configure for your environment

# Server Port
PORT=3010

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Choose storage type: 'file' or 'database'
# - file: Simple JSON file storage (default, good for single user)
# - database: PostgreSQL database (recommended for production/multi-user)
STORAGE_TYPE=file

# ============================================
# FILE STORAGE SETTINGS (when STORAGE_TYPE=file)
# ============================================
# Path to the JSON data file
# Can be absolute or relative path
# Examples:
#   - Absolute: /Users/username/Documents/timetracking-data.json
#   - Relative: ./timetracking-data.json
#   - Cloud storage: /Users/username/Dropbox/timetracking-data.json
DATA_PATH=./timetracking-data.json

# ============================================
# DATABASE SETTINGS (when STORAGE_TYPE=database)
# ============================================
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=timetracking
DB_USER=timetracking_user
DB_PASSWORD=timetracking_password

# ============================================
# APPLICATION SETTINGS
# ============================================
# Default hours for a work day
DEFAULT_WORK_DAY_HOURS=7.5
